# ==========================================
# FLYNOVA BACKEND API - CONFIGURATION
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=flynova

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS Configuration
# IMPORTANT: Set this to your frontend domain(s)
FRONTEND_URL=https://your-frontend-domain.com
# For multiple origins, use comma-separated values:
# FRONTEND_URL=https://app.yourdomain.com,https://admin.yourdomain.com

# Email Configuration (SMTP)
# For Gmail: smtp.gmail.com, port 587, requires App Password
# For Outlook: smtp-mail.outlook.com, port 587
# For custom SMTP server: use your server details
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@flynova.com

# File Upload Configuration
UPLOAD_DIR=./public/uploads
MAX_FILE_SIZE=10485760

# OpenFlights Data URLs (for data import)
AIRPORTS_DATA_URL=https://raw.githubusercontent.com/jpatokal/openflights/master/data/airports.dat
AIRCRAFT_DATA_URL=https://raw.githubusercontent.com/jpatokal/openflights/master/data/planes.dat

# SimBrief API
# Get your key from SimBrief by contacting them at contact@simbrief.com
SIMBRIEF_API_KEY=your-simbrief-api-key

# Cloudinary Configuration (Image Storage)
# Sign up at https://cloudinary.com (Free tier: 25 GB storage, 25 GB bandwidth/month)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
